{
    "compilerOptions": {
        "target": "esnext",
        "baseUrl": "./",
        "paths": {
            "@services/*": ["src/services/*"],
            "@assets/*": ["src/assets/*"],
            "@images/*": ["src/assets/images/*"],
            "@styles/*": ["src/styles/*"],
            "@components/*": ["src/components/*"],
            "@constants/*": ["src/constants/*"],
            "@directives/*": ["src/directives/*"],
            "@filters/*": ["src/filters/*"],
            "@helpers/*": ["src/helpers/*"],
            "@layouts/*": ["src/layouts/*"],
            "@mixins/*": ["src/mixins/*"],
            "@plugins/*": ["src/plugins/*"],
            "@router/*": ["src/router/*"],
            "@store/*": ["src/store/*"],
            "@views/*": ["src/views/*"],
            "@mock/*": ["src/mock/*"],
            "@/*": ["src/*"]
        }
    },
    "exclude": ["node_modules"]
}
